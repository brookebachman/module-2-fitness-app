<h1>Add a Coach</h1>
<body>
<%= form_for @coach do |f|%>
<label> Name </label><br>
<%= f.text_field :name, :size => "45" %><br>
<label> Bio </label><br>
<%= f.text_area :bio, cols: "45", rows: "10" %><br>
<label> Diet </label><br>
<%= f.collection_select :diet_id, Diet.all, :id, :name %><br>
<div class="actions"><%= f.submit "Submit your coach!", :class => "button" %>
</div>
<% end %>
</body>




